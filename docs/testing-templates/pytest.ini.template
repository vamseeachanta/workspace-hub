# pytest.ini Template
#
# Configuration file for pytest testing framework
# Copy this file to your project root as 'pytest.ini'
#
# Usage: pytest (runs all tests with configuration below)

[tool:pytest]
# Test discovery
testpaths = tests
python_files = test_*.py *_test.py
python_classes = Test*
python_functions = test_*

# Test execution options
addopts =
    --strict-markers
    --strict-config
    --verbose
    --tb=short
    --cov=src
    --cov-report=term-missing
    --cov-report=html:htmlcov
    --cov-report=xml:coverage.xml
    --cov-fail-under=80
    --durations=10
    --maxfail=5

# Test markers (use with @pytest.mark.marker_name)
markers =
    unit: Unit tests (fast, isolated)
    integration: Integration tests (component interaction)
    e2e: End-to-end tests (full system)
    slow: Slow running tests (mark for optional execution)
    api: API endpoint tests
    database: Database interaction tests
    external: Tests requiring external services
    smoke: Quick smoke tests for basic functionality

# Filtering options
filterwarnings =
    error
    ignore::UserWarning
    ignore::DeprecationWarning

# Minimum version requirements
minversion = 7.0

# Test timeout (in seconds) - uncomment if needed
# timeout = 300

# Parallel execution (uncomment to enable)
# addopts = -n auto

# Environment variables for testing (uncomment if needed)
# env =
#     TESTING = true
#     DATABASE_URL = sqlite:///:memory: