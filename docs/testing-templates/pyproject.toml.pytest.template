# pyproject.toml pytest configuration template
#
# Add this section to your pyproject.toml file for pytest configuration
# This is an alternative to pytest.ini file

[tool.pytest.ini_options]
# Test discovery
testpaths = ["tests"]
python_files = ["test_*.py", "*_test.py"]
python_classes = ["Test*"]
python_functions = ["test_*"]

# Test execution options
addopts = [
    "--strict-markers",
    "--strict-config",
    "--verbose",
    "--tb=short",
    "--cov=src",
    "--cov-report=term-missing",
    "--cov-report=html:htmlcov",
    "--cov-report=xml:coverage.xml",
    "--cov-fail-under=80",
    "--durations=10",
    "--maxfail=5"
]

# Test markers
markers = [
    "unit: Unit tests (fast, isolated)",
    "integration: Integration tests (component interaction)",
    "e2e: End-to-end tests (full system)",
    "slow: Slow running tests (mark for optional execution)",
    "api: API endpoint tests",
    "database: Database interaction tests",
    "external: Tests requiring external services",
    "smoke: Quick smoke tests for basic functionality"
]

# Filtering options
filterwarnings = [
    "error",
    "ignore::UserWarning",
    "ignore::DeprecationWarning"
]

# Minimum version
minversion = "7.0"

# Parallel execution (uncomment to enable)
# addopts = ["-n", "auto"]

# Test timeout (uncomment if needed)
# timeout = 300